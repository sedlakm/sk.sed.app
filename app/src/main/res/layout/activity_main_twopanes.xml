<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:showDividers="middle"
              android:divider="?android:attr/listDivider"
              android:weightSum="100"
              android:baselineAligned="false">

    <fragment class="com.example.sk.sedlak.appka.Tab3ContactsFragment"
              android:id="@+id/contact_list"
              android:layout_height="match_parent"
              android:layout_width="0dp"
              android:layout_weight="@integer/contact_list_percent"/>

    <fragment class="com.example.sk.sedlak.appka.ContactDetailFragment"
              android:id="@+id/contact_detail"
              android:layout_height="match_parent"
              android:layout_width="0dp"
              android:layout_weight="@integer/contact_detail_percent"/>

</LinearLayout>
